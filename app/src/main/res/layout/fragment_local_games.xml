<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
    tools:context=".ui.localgame.LocalGameFragment">

    <Button
        android:id="@+id/button_player_two"
        android:layout_width="351dp"
        android:layout_height="57dp"
        android:backgroundTint="@color/colorSecondary"
        android:rotation="-180"
        android:text="@string/button_online_game"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/button_player_one"
        android:layout_width="351dp"
        android:layout_height="57dp"
        android:layout_marginBottom="68dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/button_online_game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck" />

    <ImageView
        android:id="@+id/image_player_one"
        android:layout_width="351dp"
        android:layout_height="285dp"
        android:layout_marginTop="60dp"
        android:contentDescription="@null"
        android:src="@drawable/batman_robin_cachetada_alta_web_590x340"
        app:layout_constraintBottom_toTopOf="@+id/button_player_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_player_two"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/image_player_two"
        android:layout_width="351dp"
        android:layout_height="285dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="115dp"
        android:rotation="-180"
        android:src="@drawable/batman_robin_cachetada_alta_web_590x340"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/text_view_player_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_view_score"
        app:layout_constraintBottom_toTopOf="@+id/image_player_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_view_player_two"
        app:layout_constraintTop_toBottomOf="@+id/image_player_two" />

    <TextView
        android:id="@+id/text_view_player_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="148dp"
        android:rotation="180"
        android:text="@string/text_view_score"
        app:layout_constraintBottom_toTopOf="@+id/image_player_one"
        app:layout_constraintEnd_toStartOf="@+id/text_view_player_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_player_two" />

</androidx.constraintlayout.widget.ConstraintLayout>